<UserControl x:Class="PieChart.PieChartLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:pieChart="clr-namespace:PieChart">
    <!-- http://cebla5.spaces.live.com/?_c11_BlogPart_BlogPart=blogview&_c=BlogPart&partqs=cat%3DWPF -->
    <Grid>
        <StackPanel Orientation="Horizontal">
            <pieChart:PiePlotter Margin="10" Height="200" HorizontalAlignment="Left" VerticalAlignment="Top"
                                 Width="200"
                                 HoleSize="0.3" />
            <pieChart:Legend Margin="10" Height="200" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" />
        </StackPanel>


    </Grid>
</UserControl>